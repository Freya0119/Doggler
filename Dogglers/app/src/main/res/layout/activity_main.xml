<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/vertical_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="VERTICAL"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_button"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_button"
        app:layout_constraintStart_toStartOf="@+id/horizontal_button" />

    <Button
        android:id="@+id/horizontal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HORIZ0NTAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/grid_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GRID"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_button"
        app:layout_constraintStart_toStartOf="@+id/horizontal_button"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_button" />
</androidx.constraintlayout.widget.ConstraintLayout>